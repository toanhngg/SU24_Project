@{
    Layout = null; // Không sử dụng layout
}
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <title>Link CSS to HTML</title>
</head>
<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"><a href="login.html">Log In</a></h2>
        <h2 class="inactive underlineHover"><a href="../Admin/Register">Sign Up</a></h2>


        <!-- Icon -->
        <div class="fadeIn first">
            <img src="https://i.pinimg.com/474x/d6/c6/16/d6c6162453eb688236d5bbedd036db56.jpg" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form action="/Admin/Login1" method="post">
            <input type="text" id="email" class="fadeIn second" name="email" placeholder="email">
            <input type="text" id="password" class="fadeIn third" name="password" placeholder="password">
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>
