@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>eCommerce Cart</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            margin-top: 20px;
            background: #eee;
        }

        .ui-w-40 {
            width: 40px !important;
            height: auto;
        }

        .card {
            box-shadow: 0 1px 15px 1px rgba(52,40,104,.08);
        }

        .ui-product-color {
            display: inline-block;
            overflow: hidden;
            margin: .144em;
            width: .875rem;
            height: .875rem;
            border-radius: 10rem;
            -webkit-box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
            box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
            vertical-align: middle;
        }

        .ui-w-40 {
            width: 40px;
        }

        .ui-bordered {
            border: 1px solid #dee2e6;
            border-radius: .25rem;
        }

        .mr-4 {
            margin-right: 1.5rem;
        }

        .d-inline-flex {
            display: inline-flex;
            align-items: center;
        }

    </style>
</head>
<body>
    <div class="container px-3 my-5 clearfix">
        <!-- Shopping cart table -->
        <br />
        <div class="card">
            <div class="card-header">
                <h2>Cart</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <th class="text-center py-3 px-4" style="min-width: 400px;">Product Name &amp; Details</th>
                                <th class="text-right py-3 px-4" style="width: 100px;">Price</th>
                                <th class="text-center py-3 px-4" style="width: 120px;">Quantity</th>
                                <th class="text-right py-3 px-4" style="width: 100px;">Total</th>
                                <th class="text-center align-middle py-3 px-0" style="width: 40px;"><a href="#" class="shop-tooltip float-none text-light" title="Clear cart"><i class="fa fa-trash"></i></a></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr data-product-id="@item.ProductId">
                                        <td class="p-4">
                                            <div class="media align-items-center">
                                                <div class="media-body d-inline-flex align-items-center">
                                                    <img src="@item.ProductImage" class="d-block ui-w-40 ui-bordered mr-4" alt="">
                                                    <a href="#" class="d-block text-dark mr-2">@item.ProductName</a> <br>

                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-right font-weight-semibold align-middle p-4 price">$@item.Price</td>
                                        <td class="align-middle p-4">
                                            <input type="number" class="form-control quantity" value="@item.Quantity">
                                        </td>
                                        <td class="text-right font-weight-semibold align-middle p-4 total">$@(item.Price * item.Quantity)</td>
                                        <td class="text-center align-middle px-0">
                                            <a href="#" class="shop-tooltip close float-none text-danger" data-product-id="@item.ProductId" title="Remove">×</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Your cart is empty</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- / Shopping cart table -->

                <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">
                    <div class="mt-4">
                        <label class="text-muted font-weight-normal">Promocode</label>
                        <input type="text" placeholder="ABC" class="form-control">
                    </div>
                    <div class="d-flex">
                        <div class="text-right mt-4 mr-5">
                            <label class="text-muted font-weight-normal m-0">Discount</label>
                            <div class="text-large"><strong>$20</strong></div>
                        </div>  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;
                        <div class="text-right mt-4">
                            <label class="text-muted font-weight-normal m-0">Total price</label>
                            <div class="text-large"><strong><span id="totalPrice"></span></strong></div>
                        </div>
                    </div>
                </div>

                <div class="float-right">
                    <button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">Back to shopping</button>
                    <button type="button" class="btn btn-lg btn-primary mt-2">Checkout</button>
                </div>

            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // Function to calculate total price
            function CalculateTotalPrice() {
                var totalPrice = 0;
                $('.table tbody tr').each(function () {
                    var price = parseFloat($(this).find('.price').text().replace('$', ''));
                    var quantity = parseInt($(this).find('.quantity').val());
                    var total = price * quantity;
                    $(this).find('.total').text('$' + total.toFixed(2)); // Update displayed total
                    totalPrice += total;
                });
                return totalPrice - 20; // Subtract discount
            }

            // Function to initialize total price on page load
            function InitializeTotalPrice() {
                var totalPrice = CalculateTotalPrice();
                $('#totalPrice').text('$' + totalPrice.toFixed(2));
            }

            // Call initialize function on page load
            InitializeTotalPrice();

            // Handle change in quantity
            $('input.quantity').change(function () {
                var quantity = parseInt($(this).val());
                var price = parseFloat($(this).closest('tr').find('.price').text().replace('$', ''));
                var total = quantity * price;
                $(this).closest('tr').find('.total').text('$' + total.toFixed(2));

                var productId = $(this).closest('tr').data('product-id');
                $.ajax({
                    type: 'POST',
                    url: '/Cart/UpdateCartItem',
                    data: { productId: productId, quantity: quantity },
                    success: function (response) {
                        if (response.success) {
                            console.log('Cart updated successfully.');
                            InitializeTotalPrice(); // Update total price after successful update
                        } else {
                            console.log('Failed to update cart.');
                        }
                    },
                    error: function (error) {
                        console.log('Error updating cart:', error);
                    }
                });
            });

            // Handle remove from cart
            $('.close').click(function () {
                var productId = $(this).data('product-id');
                $.ajax({
                    type: 'POST',
                    url: '/Cart/RemoveFromCart',
                    data: { productId: productId },
                    success: function (response) {
                        if (response.success) {
                            alert('Product removed from cart');
                            location.reload(); // Refresh page after successful removal
                        }
                    },
                    error: function (error) {
                        alert('Failed to remove product from cart.');
                    }
                });
            });
        });
    </script>
</body>
</html>
